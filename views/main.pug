        title Lara AlOtaibi

    script.
        var sizeInterval;
        var sections = ["home", "about", "skills", "projects", "papers", "timeline"]
        $(document).ready(function(){
            for(let i = 1; i<sections.length;i++)$("."+sections[i]).hide();

            sizeInterval = setInterval(function(){$(".home").css("height", (parseInt(window.innerHeight)-160)+"px")}, 100)
            setInterval(function(){$(".cursor").toggle()},500)

            $("#linkedin").click(function(){window.open("https://www.linkedin.com/in/lara-alotaibi-380121242/",'_blank')})
            $("#github").click(function(){window.open("https://github.com/Larito",'_blank')})
            $("#resumeButton").click(function(){window.open("./cv.pdf",'_blank')})
            $("#email").click(function(){
                try{clearTimeout(emailTimeout)}
                catch(e){}
                var y= document.getElementById("hidURL");

                y.style.position = 'relative';
                y.style.top = 0;
                y.style.left = 0;
                y.style.width = '100%';
                y.style.padding = 0;
                y.style.border = 'none';
                y.style.outline = 'none';
                y.style.boxShadow = 'none';
                y.style.background = 'transparent';
                y.innerHTML="lara13otaibi@gmail.com";
                document.execCommand("copy");
                $(".prompt").show(100)
                emailTimeout = setTimeout(function(){
                    y.focus()
                    y.select();
                    y.setSelectionRange(0, 99999);
                    document.execCommand("copy");
                    emailTimeout = setTimeout(function(){$(".prompt").hide(100)}, 3000)
                }, 200)
            })

            $("#logo").click(function(){changePage("home");})
            $(".aboutBtn").click(function(){changePage("about")})
            $(".skillsBtn").click(function(){changePage("skills")})
            $(".projectsBtn").click(function(){changePage("projects")})
            $(".papersBtn").click(function(){changePage("papers")})
            $(".timelineBtn").click(function(){changePage("timeline")})

            $(".projectCard").hover(
                function(){
                    $(this.children[0]).css("overflow-y","scroll")
                    $(this.children[0]).animate({"height":"100%"}, 200)
                },
                function(){
                    $(this.children[0]).css("overflow-y","hidden")
                    $(this.children[0]).animate({"height":"17%"}, 200)
                    this.children[0].scrollTo(0,0)
                }
            )
        })
        function changePage(page){
            for(var i=0;i<sections.length;i++)if(sections[i]!=page)$("."+sections[i]).slideUp(500)
            $("."+page).slideDown(500)
        }

    body
